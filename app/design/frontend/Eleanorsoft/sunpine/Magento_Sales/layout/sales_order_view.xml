<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="columns">
            <container htmlTag="div" class="" htmlClass="container mgt50">
                <container name="account.wrapper" htmlTag="div" htmlClass="row">
                    <container htmlTag="div" htmlClass="col-md-3 side-left-bord d-none d-md-block">
                        <container name="left.sidebar" htmlTag="div" htmlClass="sidebar sidebar-left" />
                    </container>
                </container>
            </container>
        </referenceContainer>
        <move element="customer_account_navigation" destination="left.sidebar" />
        <referenceContainer name="main" htmlClass="column main col-md-9 col-sm-12" />
        <move element="main" destination="account.wrapper" />
        <move element="page.main.title" destination="main" before="-" />

        <referenceContainer name="content">
            <container name="order.information" htmlClass="order-information" htmlTag="div" before="-">
                <block name="back.btn" class="\Magento\Sales\Block\Order\View" template="back.phtml" />
            </container>
        </referenceContainer>
        <move element="order.status" destination="order.information" before="back.btn" />
        <move element="order.date" destination="order.information" before="back.btn" />
        <referenceContainer name="order.actions.container" remove="true" />
        <referenceBlock name="sales.order.info.links" remove="true" />
    </body>
</page>
