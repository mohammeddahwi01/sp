<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="css/weltpixel-overflow.css"/>
    </head>
    <body>
        <referenceContainer name="main" htmlClass = "column main simple-product-quickview"/>
        <move element="product.info.addtocart" destination="product.info.main" before="-"/>
        <move element="product.price.final" destination="product.info.addtocart.additional" after="-" />
        <move element="page.main.title" destination="product.info.main" before="-" />
        <move element="product.info.media" destination="main" before="-" />
        <move element="product.info.stock.sku" destination="page.main.title" />
        <!--<move element="product.info.form.content" destination="product.info.main" after="page.main.title"/>-->

        <referenceBlock name="product.info.addtocart">
            <block class="Eleanorsoft\AddThis\Block\Widget" name="addthis.widget"/>
        </referenceBlock>
    </body>
</page>
