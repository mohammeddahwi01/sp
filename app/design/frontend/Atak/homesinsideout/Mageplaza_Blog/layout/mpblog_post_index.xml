<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <!--<update handle="mpblog_design" />-->
    <body>
        <referenceBlock name="page.main.title" remove="true" />
        
        <referenceContainer name="page.top">
	        <block class="Mageplaza\Blog\Block\Category\Widget" name="mpblog.sidebar.category" template="Mageplaza_Blog::category/widget.phtml"/>
            <block class="Magento\Cms\Block\Block" name="mpblog.top.banner" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">blog-banner</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="mpblog.post.list" template="Mageplaza_Blog::post/list.phtml" />
        <!--<referenceContainer name="content">
            <block class="Mageplaza\Blog\Block\Frontend" name="mpblog.post.list" as="mpblog_post"  template="post/list.phtml"/>
        </referenceContainer>-->
    </body>
</page>

