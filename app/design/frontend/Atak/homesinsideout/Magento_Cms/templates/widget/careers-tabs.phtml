<script type="text/javascript">
	require([
			'jquery'
		],
		function($) {
			$('.careers-tabs .tab-headers a').click( function(e) {
				e.preventDefault();
				
				var $this = $(this);
				if ( $this.parent().hasClass('current') )
					return;
				
				$('.careers-tabs .tab-headers .current').removeClass('current');
				$this.parent().addClass('current');
				
				$('.careers-tabs .tab-content').hide();
				$('.careers-tabs').find( $this.attr('href') ).show();
			});
		}
	);
</script>
